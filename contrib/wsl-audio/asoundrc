# ALSA configuration for WSL to suppress common warnings
# Copy this to ~/.asoundrc to silence ALSA warnings without hiding errors

# Default PCM device - route to PulseAudio
pcm.!default {
    type pulse
    server unix:/mnt/wslg/PulseServer
}

# Default control device - route to PulseAudio
ctl.!default {
    type pulse
    server unix:/mnt/wslg/PulseServer
}