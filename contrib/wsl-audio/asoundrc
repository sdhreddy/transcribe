# ALSA configuration for WSL to suppress common warnings
# Copy this to ~/.asoundrc to silence ALSA warnings without hiding errors

# Default PCM device - route to PulseAudio
pcm.!default {
    type pulse
}

# Default control device - route to PulseAudio
ctl.!default {
    type pulse
}

# Define card 0 to prevent "cannot find card 0" warnings
pcm.card0 {
    type pulse
}

# Define sysdefault to prevent "Unknown PCM sysdefault" warnings
pcm.sysdefault {
    type pulse
}

# JACK compatibility (prevents JACK warnings when not using JACK)
pcm.jack {
    type pulse
}

# Define hw:0 fallback to prevent hardware access warnings
pcm.hw0 {
    type pulse
}